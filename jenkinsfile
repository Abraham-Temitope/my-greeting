pipeline {
    agent any  // Runs on your EC2 Jenkins server

    environment {
        ECR_REPO     = 'my-greeting'                    // Your ECR repo name
        AWS_REGION   = 'eu-north-1'                     // Your region
        ACCOUNT_ID   = '920301614774'                   // Your AWS Account ID
        ECR_URL      = "${ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com"
        IMAGE_NAME   = "${ECR_REPO}:latest"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies & Test') {
            steps {
                sh '''
                    # Create temporary venv
                    python3 -m venv build-venv
                    
                    # Activate it
                    . build-venv/bin/activate
                    
                    # Upgrade pip & install deps
                    python -m pip install --upgrade pip
                    pip install -r requirements.txt
                    
                    # Run tests (continue even if collection fails)
                    pytest || true
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                    docker build -t ${IMAGE_NAME} .
                '''
            }
        }

        stage('Push to ECR') {
            when { branch 'main' }
            steps {
                sh '''
                    aws ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin ${ECR_URL}
                    docker tag ${IMAGE_NAME} ${ECR_URL}/${IMAGE_NAME}
                    docker push ${ECR_URL}/${IMAGE_NAME}
                '''
            }
        }

        stage('Deploy to Kubernetes') {
            when { branch 'main' }
            steps {
                withKubeConfig([credentialsId: 'kubeconfig']) {
                    sh '''
                        # Apply manifests (add more if you have other .yml files)
                        kubectl apply -f deployment.yml
                        kubectl apply -f service.yml
                        kubectl apply -f ingress.yml
                        
                        # Optional: wait for rollout (change 'my-greeting' to your actual deployment name)
                        # kubectl rollout status deployment/my-greeting --timeout=300s
                    '''
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished'
        }
        success {
            echo '✅ Full success: build + push + deploy!'
        }
        failure {
            echo '❌ Failed - check console output'
        }
    }
}
